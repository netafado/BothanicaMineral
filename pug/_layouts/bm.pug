block settings
    - var title = 'Leort é vida'
doctype
html(lang="pt")
    head
        include ../_partials/meta-tags
        include ../_partials/icons
        title #{title}
        block CSS
            link(rel="stylesheet", href="css/plugins.css")

    body
        #loader
            img.loader-img.img-responsive(src="https://s3-sa-east-1.amazonaws.com/happybiz-web/BOTHANICA+MINERAL/Icon/Icon+72.png", alt="Lodder")

        // Header navegação
        header
            .container
                .row
                    .logo-leort.col-lg-2
                        img(src="img/logo-topo.png", alt="Logo Bothanica Mineral")
                    .menu-leort.col-lg-8
                    .rede-sociais.col-lg-2
                        img(src="img/icon-face.png", alt="Facebook")
                        img(src="img/icon-insta.png", alt="Facebook")


        block content
        .ir-topo 
            img(class="seta",src="https://s3-sa-east-1.amazonaws.com/happybiz-web/Experiencia-De-Sucesso/novo-site/home/seta.png", alt="")

        block footer
            footer
                .container
                            




        block scriptsJS
            script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
            script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")

            