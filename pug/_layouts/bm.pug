block settings
    - var title = 'Leort® é vida'
doctype
html(lang="pt")
    head
        include ../_partials/meta-tags
        include ../_partials/icons
        title #{title}
        block CSS
            link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css")
            link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css")
            link(rel="stylesheet", href="css/plugins.css")

    body
        #loader
            img.loader-img.img-responsive(src="https://s3-sa-east-1.amazonaws.com/happybiz-web/BOTHANICA+MINERAL/Icon/Icon+72.png", alt="Lodder")
        .ir-topo#ir-topo(style="display:none")
            a#ir-topos(href="#c-banner", class="goesTo")
                img(class="seta",src="https://s3-sa-east-1.amazonaws.com/happybiz-web/BOTHANICA+MINERAL/site/seta.png", alt="")
        // menu-nobile
        .menu-mob-flutuante#menu-mob-flutuante.img-back-leort(style="display:none; background-image:url(img/background-leort.png);")
            ul.display-menu-mob
                li 
                    a(class="link-topo",href="#leort", class="goesTo") LEORT®
                li 
                    a(class="link-topo",href="#acoes", class="goesTo") Ações
                li 
                    a(class="link-topo",href="#depoimentos", class="goesTo") depoimentos
            .fechar-menu
                img(src="img/fechar.png", alt="Botão Fechar")

        // Header navegação
        header#topo
            .container
                .row
                    .logo-leort.col-xs-6.col-xs-push-3.col-md-2.col-md-push-0
                        a(href="https://www.bothanicamineral.com.br/" target="_blank")
                            img(src="img/logo-topo.png", alt="Logo Bothanica Mineral")
                    .menu-leort.col-xs-3.col-xs-pull-6.col-md-8.col-md-pull-0
                        // Navegação para desk
                        nav.visible-md.visible-lg
                            ul.display-menu
                                li 
                                    a(class="link-topo",href="https://www.bothanicamineral.com.br/" ) bothanica mineral®
                                li 
                                    a(class="link-topo",href="#leort", class="goesTo") LEORT®
                                li 
                                    a(class="link-topo",href="#acoes", class="goesTo") Ações
                                li 
                                    a(class="link-topo",href="#depoimentos", class="goesTo") depoimentos
                        // Navegação para mob
                        nav.visible-xs.visible-sm
                                .menu-mob
                                    span.icon-bar
                                    span.icon-bar  
                                    span.icon-bar                   


                    .rede-sociais.col-xs-3.col-md-2
                        a(href="https://www.facebook.com/Bothanicamineral/" target="_blank")
                            img.rede-sociais-face(src="img/icon-face.png", alt="Facebook")
                        a(href="https://www.instagram.com/bothanicamineral/?hl=pt" target="_blank")
                            img.rede-sociais-insta(src="img/icon-insta.png", alt="Facebook")


            .line-gold#menu-topo
                canvas#brilho.absolute


        block content


        block footer
            .line-gold.grande   
            footer.bg-verde
                .container
                    .col-sm-2
                        h5.bold Institucional
                        ul.footer-texto
                            li 
                                a(href="http://www.bothanicamineral.com.br/sobre-a-empresa" target="_blank") Sobre a Empresa
                            li 
                                a(href="http://www.bothanicamineral.com.br/pontosdevendaoficial" target="_blank") Pontos de Venda Oficial
                            li 
                                a(href="http://www.bothanicamineral.com.br/onde-encontrar" target="_blank") Onde encontrar
                            li 
                                a(href="http://www.bothanicamineral.com.br/politica-privacidade" target="_blank") Política de Privacidade
                            li 
                                a(href="https://www.bothanicamineral.com.br/customer/account/login/" target="_blank") Acompanhe seu pedido
                            li 
                                a(href="http://www.bothanicamineral.com.br/regras-de-entrega" target="_blank") Regras de entrega
                            li 
                                a(href="http://www.bothanicamineral.com.br/atendimento-cliente" target="_blank") Fale Conosco
                    .col-sm-2
                        h5.bold Sou Profissional
                        ul.footer-texto
                            li 
                                a(href="http://www.bothanicamineral.com.br/beneficios" target="_blank") Benefícios
                            li 
                                a(href="http://www.bothanicamineral.com.br/protocolos" target="_blank") Protocolos
                            li 
                                a(href="http://www.bothanicamineral.com.br/cursos-bothanica-mineral" target="_blank") Cursos

                    .col-sm-4
                        h5.bold #BOTHANICA
                        <script src="//lightwidget.com/widgets/lightwidget.js"></script><iframe src="//lightwidget.com/widgets/5713f93d83275f119d58bc5dec0b1cd0.html" scrolling="no" allowtransparency="true" class="lightwidget-widget" style="width: 100%; border: 0; overflow: hidden;"></iframe>

                    .col-sm-4
                        .footer-texto.logo-footer
                            a(href="https://www.bothanicamineral.com.br/" target="_blank")
                                img(src="img/logo-rodape.png", alt="", srcset="")
                .container-fluid.logo-biz
                        a(href="http://www.happybiz.com.br/" target="_blank")
                            img.logo-biz-img(src="https://s3-sa-east-1.amazonaws.com/happybiz-web/BOTHANICA+MINERAL/site/logo-biz.png", alt="HappyBiz")

        .line-gold.grande                       




