.relative
    position: relative

.absolute 
    position: absolute

.z-alto
    z-index: 2
.padding-zero
    padding: 0

.back-cover
    background-size: cover

.back-contain
    background-size: contain

.to-right
    float: right 

.text-overflow
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap





.display-Flex
    display: flex
    width: 100%
    justify-content: space-between
    margin-top: 40px
    flex-wrap: wrap
    .flex-item
        padding: 40px
        text-align: center
        width: 30%

.borda
    border: 1px solid #c2c2c2
    margin-bottom: 20px

.icone-verde
    margin-top: -100px

@media screen and (max-width: $queries['medium'])
    .display-Flex
        margin-top: 40px
        .flex-item
            width: 100%
            &:nth-child(2)
                margin-top: 100px
                margin-bottom: 100px


.slick-dots li.slick-active button:before {
    opacity: 1;
    color: black;
}
.slick-dots li button:before {
    font-family: slick;
    font-size: 12px;
    line-height: 20px;
    position: absolute;
    top: 0;
    left: 0;
    width: 20px;
    height: 20px;
    content: 'â€¢';
    text-align: center;
    opacity: 1;
    color: $colors['verde-bm'];
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

body::-webkit-scrollbar {
    width: 0.7em;
}
 
body::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
}
 
body::-webkit-scrollbar-thumb {
  background-color: $colors['verde-bm'];
  outline: 1px solid slategrey;
}
