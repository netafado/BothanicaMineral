
#topo
    @extends .absolute

.banners
    @extends .padding-zero
.img-back-leort
    @extends .back-contain
    background-image: url('../img/background-topo.jpg')
    background-repeat: no-repeat

.bg-imagem-tec
    @extends .back-cover
    background-image: url('../img/background-meio.png')
.back-acoes
    @extends .back-cover
    background-image: url('../img/background-moleculas.png')
#c-banner
    padding-top 80px
.caixa-leort
    position: absolute
    z-index 3
    margin-left: -180px
    
.bandeira
    @extends .absolute
    bottom: -30px
    left 0
    z-index 3
.section
    padding 120px 0
.leort-desc
    box-shadow: 0px 4px 1px $shadow-color

img.leort-banner1
    margin-bottom -40px

.text-leort
    margin-top: 130px


.line-gold
    width: 100%
    height 1px
    background-image: url(../img/linha-dourada.png)

.line-width
    width: 150px;
    margin: auto
    height 1px
    background-image: url(../img/linha-dourada.png)

.line-width-big
    width: 400px;
    height 2px
    background-image: url(../img/linha-dourada.png)

.arrowsPlace
    width: 120px
    height 40px;
    position relative
    right 0
    float right 

.cursos-todos
    padding 30px 5px



@media screen and (max-width: $queries['large'])
    .text-leort
        margin-top: 0px
    .bandeira
        max-width 320px
        bottom: -40px

@media screen and (max-width: $queries['medium'])
    .img-back-leort
        text-align: center

    img.leort-banner1
        margin auto
    #c-banner
        padding-top 20px        
    .text-leort
        margin-top: 20px

    .leort-banner1
        margin 0 0 0 0
    .img-back-leort
        img 
            max-width 300px

@media screen and (max-width: $queries['small'])
    //tetste
    .item-c
        h1
        p 
            text-align: center
        p 
            font-size: 18px
            line-height: 1.2
@media screen and (max-width: 390px)
    .bandeira
        bottom: -20px
        max-width 280px
        