.navegacao
    border-top 1px solid $colors['oceano']

.menu
    cursor pointer
#desk-nav
    color: white
    display flex
    justify-content: space-between
    padding: 0
    margin: 0 
    li 
        list-style: none
        font-weight: 100
        font-size: 12px
        .nav-item
            display block
            padding 20px 10px
            color white
            letter-spacing: 0.3
            text-decoration: none
            background-color: transparent
            transition: 1s background-color, 1s box-shadow
            box-shadow: 0px 0px 10 px none 
            &:hover
                background-color: $colors['oceano']
                box-shadow: 0px 0px 2px $colors['oceano']

            &.ativo
                color: $colors['oceano']
            &.ativo:hover
                box-shadow: 0
                background-color: transparent
                color: $colors['oceano']

@media (max-width: 1200px)
    #desk-nav
        display: none
        flex-direction: column
    .menu
        display: none




