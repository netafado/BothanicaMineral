.fechar-menu
    position: absolute
    right 10px
    top 10px
    cursor pointer
    img 
        max-width 40px
.menu-mob-flutuante
    display flex
    width: 100%
    height 100%
    position: fixed
    z-index 999999999
    top 0
    left 0;
    justify-content: center
    background-color alpha(white, 0.9)
.display-menu-mob
    flex-direction: column
    display: flex
    align-self: center
    justify-content: flex-end
    padding: 0

    li
        list-style: none
        text-align: center
        font-size: 20px
        text-transform: uppercase
        margin-top 10px
        a
            text-decoration: none
            color: $colors['cinza']
            transition: .3s
            &:hover
                color: $colors['verde-bm']
                font-weight: bold
            &.ativo
               color: $colors['verde-bm']
               font-weight: bold
.display-menu
    display: flex
    justify-content: flex-end
    li
        list-style: none
        text-transform: uppercase
        margin-right: 50px
        padding-top: 8px;
        a
            text-decoration: none
            color: $colors['cinza']
            transition: .3s
            &:hover
                color: $colors['verde-bm']
                font-weight: bold
            &.ativo
               color: $colors['verde-bm']
               font-weight: bold
.menu-mob
    cursor pointer
    span.icon-bar
        margin-top 4px
        width: 30px
        height 4px
        display: block
        border-radius 3px
        background-color: $colors['verde']
            




